{
    // Nice base settings here: https://fredrikaverpil.github.io/2017/02/02/my-vscode-setup/
    // EDITOR SETTINGS
    // Peacock color customization
    "workbench.colorCustomizations": {
        "statusBar.background": "#0058b3",
        "statusBar.foreground": "#e7e7e7",
        "statusBarItem.hoverBackground": "#0071e6",
        "titleBar.activeBackground": "#0058b3",
        "titleBar.activeForeground": "#e7e7e7",
        "titleBar.inactiveBackground": "#0058b399",
        "titleBar.inactiveForeground": "#e7e7e799",
        "activityBar.activeBackground": "#0071e6",
        "activityBar.activeBorder": "#ff80be",
        "activityBar.background": "#0071e6",
        "activityBar.foreground": "#e7e7e7",
        "activityBar.inactiveForeground": "#e7e7e799",
        "activityBarBadge.background": "#ff80be",
        "activityBarBadge.foreground": "#15202b"
    },
    "peacock.remoteColor": "#0058b3",
    // Enable automatic formatting on save
    "editor.formatOnSave": true,
    "editor.minimap.enabled": true,
    "editor.minimap.renderCharacters": false,
    "editor.detectIndentation": true,
    "editor.roundedSelection": false,
    "editor.renderIndentGuides": true,
    "editor.formatOnPaste": true,
    "explorer.openEditors.visible": 0,
    // Autosave every 2 minutes
    "files.autoSave": "afterDelay",
    "files.autoSaveDelay": 120000,
    // Trailing spaces
    // Render trailing whitespaces
    "editor.renderWhitespace": "trailing",
    "trailing-spaces.trimOnSave": true,
    "trailing-spaces.syntaxIgnore": [
        "markdown"
    ],
    // Automatically hide these files
    "files.exclude": {
        "**/.git": true,
        "**/.DS_Store": true,
        "**/__pycache__": true,
        "**/**/*.pyc": true,
    },
    // PYTHON SETTINGS
    // Python interpreter
    "python.pythonPath": "env/bin/python",
    // Set python formatter to black
    "python.formatting.provider": "black",
    // Include [extendedSummary] tag in automatic docstring generation
    "autoDocstring.includeExtendedSummary": true,
    // Start each docstring on a new line
    "autoDocstring.startOnNewLine": true,
    // Enable linting
    "python.linting.enabled": true,
    // Set linter to be flake8 (will then use the setup.cfg file for linting rules)
    "python.linting.flake8Enabled": true,
    // Automatically trim trailing whitespaces only for python files
    "[python]": {
        "files.trimTrailingWhitespace": true,
        "files.insertFinalNewline": true,
        // Set vertical lines through editor
        "editor.rulers": [
            88,
            120
        ],
        "editor.tabSize": 4,
        "editor.insertSpaces": true,
    },
}